{
  "buildCommand": "next build",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "env": [
    {
      "key": "DATABASE_URL",
      "description": "PostgreSQL connection string for Neon or similar provider",
      "example": "postgresql://user:password@host:5432/database"
    }
  ],
  "functions": {
    "api/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}